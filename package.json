{
  "name": "@cortex/agentic-platform",
  "version": "0.1.0",
  "description": "Agentic platform with memory, RAG, reasoning, sandbox, and human-in-the-loop",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install || true",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "dev": "ts-node src/index.ts",
    "setup": "bash scripts/setup-dev.sh",
    "health": "bash scripts/health-check.sh",
    "validate": "npm run build && npm run typecheck && npm run lint && npm test -- --testPathIgnorePatterns=integration --coverage"
  },
  "keywords": [
    "agent",
    "ai",
    "llm",
    "rag",
    "memory",
    "orchestration"
  ],
  "author": "Kike & Harvis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/erscoder/cortex.git"
  },
  "bugs": {
    "url": "https://github.com/erscoder/cortex/issues"
  },
  "homepage": "https://github.com/erscoder/cortex#readme",
  "dependencies": {
    "@langchain/core": "^0.2.0",
    "@langchain/langgraph": "^0.2.0",
    "@pinecone-database/pinecone": "^2.0.0",
    "ioredis": "^5.3.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.0",
    "weaviate-client": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  }
}
